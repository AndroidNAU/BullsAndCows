<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="75dp"
        android:minWidth="225dp"
        android:text="@string/resume"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners"
        android:id="@+id/resume_button"
        android:layout_gravity="bottom|center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="75dp"
        android:minWidth="225dp"
        android:text="@string/new_game"
        android:background="@drawable/rounded_corners"
        android:id="@+id/new_game_button"
        android:layout_gravity="bottom|center"
        android:layout_alignTop="@+id/resume_button"
        android:layout_alignLeft="@+id/exit_button"
        android:layout_alignStart="@+id/exit_button"
        android:textColor="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="75dp"
        android:minWidth="225dp"
        android:text="@string/scores"
        android:background="@drawable/rounded_corners"
        android:id="@+id/scores_button"
        android:layout_below="@+id/resume_button"
        android:layout_alignLeft="@+id/resume_button"
        android:layout_alignStart="@+id/resume_button"
        android:layout_marginTop="40dp"
        android:layout_gravity="bottom|center"
        android:textColor="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="75dp"
        android:minWidth="225dp"
        android:text="@string/exit"
        android:background="@drawable/rounded_corners"
        android:id="@+id/exit_button"
        android:layout_alignTop="@+id/scores_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="bottom|center"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
